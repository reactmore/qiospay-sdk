{
    "name": "reactmore/qiospay-sdk",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Reactmore\\QiosPay\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests",
            "Tests\\Support\\": "tests/_support"
        }
    },
    "authors": [
        {
            "name": "reactmore",
            "email": "reactmorecom@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-pdo": "*",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "reactmore/support-adapter": "^1.0.3",
        "endroid/qr-code": "^6.0"
    },
    "require-dev": {
        "codeigniter4/devkit": "^1.3",
        "codeigniter4/framework": "^4.6"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-helper": "phpunit tests/ParseTransactionMessageTest.php",
        "test-helper-bank": "phpunit tests/ParseTest/ParseBankTest.php",
        "cs-fix": "php-cs-fixer fix --ansi --verbose --diff"
    }
}
